.container {
  background-color: #f0f8ff;
  min-height: 100vh;
  padding: 20rpx;
}

.detail-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.1);
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  background: #1976D2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

.student-basic {
  text-align: center;
  margin-bottom: 40rpx;
}

.student-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 10rpx;
}

.student-role {
  font-size: 28rpx;
  color: #666;
}

.detail-section {
  margin: 30rpx 0;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 15rpx;
  flex-wrap: wrap;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  font-weight: 500;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.actions {
  text-align: center;
  margin-top: 30rpx;
}

.detail-btn {
  background: #1976D2;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}
