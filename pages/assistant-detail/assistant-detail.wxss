/* pages/assistant-detail/assistant-detail.wxss */
.assistant-detail-container {
  padding: 30rpx;
}

.assistant-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.assistant-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.assistant-basic-info {
  flex: 1;
}

.assistant-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.assistant-title {
  font-size: 28rpx;
  color: #666;
}

.assistant-description {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.assistant-detail-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}