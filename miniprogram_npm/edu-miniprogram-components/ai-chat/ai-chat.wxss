/* components/ai-quickstart/ai-quickstart.wxss */
.main {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    height: 120rpx;
    background-color: #f5f5f5;
    padding: 0 0 20rpx 0;
}

.input {
    display: inline;
    height: 70rpx;
    flex-grow: 1;
    background-color: white;
    border-radius: 10rpx;
    margin: 0 15rpx;
}

.button {
    margin: 0 15rpx 0 0 !important;
    padding: 0 !important;
    background-color: white;
    height: 70rpx;
    line-height: 70rpx;
    width: 180rpx !important;
    flex-grow: 0;
}