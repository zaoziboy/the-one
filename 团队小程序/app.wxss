/**app.wxss**/
:root {
  --primary-color: #4A90E2;
  --secondary-color: #F5F5F5;
  --text-color: #333333;
  --text-light: #7A7A7A;
  --border-color: #E0E0E0;
  --success-color: #09BB07;
  --warning-color: #FFBE00;
  --danger-color: #FA5151;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
  background-color: #F9F9F9;
  color: var(--text-color);
  font-size: 28rpx;
  line-height: 1.6;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 通用按钮样式 */
.primary-btn {
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  line-height: 1.4;
}

.primary-btn:active {
  opacity: 0.8;
}

.secondary-btn {
  background-color: var(--secondary-color);
  color: var(--text-color);
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  line-height: 1.4;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.hidden {
  display: none;
}