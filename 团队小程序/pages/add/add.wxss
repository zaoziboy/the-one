/* pages/add/add.wxss */
.add-container {
  padding: 30rpx;
  min-height: 100vh;
  background: white;
  display: flex;
  flex-direction: column;
}

.form-section {
  margin-bottom: 60rpx;
  flex: 1;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  display: block;
  color: var(--text-color);
}

.upload-area {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--text-light);
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.input-group {
  margin-bottom: 40rpx;
  position: relative;
}

.input-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: var(--text-color);
  font-weight: 500;
}

.input-field, .textarea-field {
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  background: var(--secondary-color);
}

.textarea-field {
  height: 200rpx;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: var(--text-light);
  display: block;
  margin-top: 10rpx;
}

.location-group {
  margin-bottom: 40rpx;
}

.location-display {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  background: var(--secondary-color);
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.7;
}

.location-btn {
  background: var(--secondary-color);
  color: var(--text-color);
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border: 1rpx solid var(--border-color);
}

.location-btn::after {
  border: none;
}

.submit-btn {
  background: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  padding: 25rpx 0;
  font-size: 32rpx;
  width: 100%;
  margin-top: auto;
}

.submit-btn[disabled] {
  background: #CCCCCC;
  color: #999999;
}