/* pages/detail/detail.wxss */
.detail-container {
  background: white;
  min-height: 100vh;
}

.detail-image {
  width: 100%;
  max-height: 500rpx;
}

.detail-content {
  padding: 30rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  color: var(--text-color);
  line-height: 1.4;
}

.detail-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  display: block;
  margin-bottom: 40rpx;
}

.detail-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.meta-item {
  display: flex;
  align-items: center;
  color: var(--text-light);
  font-size: 26rpx;
}

.meta-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  opacity: 0.6;
}

.reaction-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.reaction-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 12rpx;
  background: var(--secondary-color);
}

.reaction-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 15rpx;
}

.similar-section {
  padding: 30rpx;
  border-top: 20rpx solid var(--secondary-color);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
  color: var(--text-color);
}

.similar-scroll {
  white-space: nowrap;
  margin-top: 20rpx;
}

.similar-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
}

.similar-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

.similar-title {
  display: block;
  font-size: 24rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: var(--text-color);
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: var(--text-light);
}